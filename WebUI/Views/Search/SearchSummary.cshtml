@model  BusStation.Services.Models.TimeTableViewModel


<div class="well">
    @using (Html.BeginForm("BuyTicket", "BuyTicket", FormMethod.Post, new {@class="form-horizontal"}))
    {
        @Html.HiddenFor(h=>h.TameTableId)
        @Html.HiddenFor(h=>h.RouteId)
        @Html.HiddenFor(h=>h.DepartureDate)
        @Html.HiddenFor(h=>h.DepartureStop)
        @Html.HiddenFor(h=>h.ArrivalStop)
        @Html.HiddenFor(h=>h.Price)

        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(l=>l.DepartureStop, Model.DepartureStop)
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(l=>l.ArrivalStop, Model.ArrivalStop)
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(l=>l.DepartureDate, Model.DepartureDate.ToString("dd.MM.yyyy"))
                </div>
                <div class="col-md-1">
                    <label>
                        @Html.LabelFor(l=>l.DepartureDate, Model.DepartureDate.ToString("t"))
                    </label>
                </div>
                <div class="col-md-1">
                    <label>
                        @Html.LabelFor(l=>l.Seats, Model.Seats.ToString())
                    </label>
                </div>
                <div class="col-md-1">
                    @Html.LabelFor(l=>l.Price, Model.Price.ToString("F"))
                </div>
                <div class="col-md-1">
                    @Html.TextBoxFor(t=>t.Quantity, new { style= "max-width:50px" })
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-default">Купить</button>
                </div>
            </div>
        </div>
    }
</div>
