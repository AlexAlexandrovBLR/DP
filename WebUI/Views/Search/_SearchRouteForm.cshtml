@model BusStation.Services.Models.InputModels.SearchRouteFilterModel

<style>
    fieldset.scheduler-border {
        border: 1px solid black;
        padding: 10px;
        max-height: 100%
    }
    legend.scheduler-border {
        width:inherit; /* Or auto */
        padding:0 10px; /* To give a bit of padding on the left and right */
        border-bottom:none;
    }
</style>

<fieldset class="scheduler-border"  >
    <legend class="scheduler-border">Поиск</legend>
    @using (@Html.BeginForm("Search", "Search", FormMethod.Post, new {@class = "form-horizontal" ,@style= "margin-left:23px", id="searchForm" }))
    {
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(l => l.DepartureStation, new { @class = "col-xs-2 control-label" })
                <div class="col-xs-10">
                    @Html.TextBoxFor(t => t.DepartureStation, new {@class="form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(l => l.ArrivalStation, new { @class = "col-xs-2 control-label" })
                <div class="col-xs-10">
                    @Html.TextBoxFor(t => t.ArrivalStation, new {@class="form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(l => l.DepartureDate, new { @class = "col-xs-2 control-label" })
                <div class="col-xs-10">
                    @Html.TextBoxFor(t => t.DepartureDate, new {@class="form-control", type="date" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-10">
                    <button type="submit" class="btn btn-default">Найти</button>
                </div>
            </div>
        </div>
    }

</fieldset>

