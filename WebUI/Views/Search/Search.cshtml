@using System.Web.Mvc.Html
@using WebUI.HtmlHelpers
@model BusStation.Services.Models.ListTimeTableViewModel


@{
    ViewBag.Title = "Search";
}

<h2 align="center">Результаты поиска</h2>

<div class="row">
    <div class="col-md-2">
        <label>
            Откуда
        </label>
    </div>
    <div class="col-md-2">
        <label>
            Куда
        </label>
    </div>
    <div class="col-md-2">
        <label>
            Дата
        </label>
    </div>
    <div class="col-md-1">
        <label>
            Время
        </label>
    </div>
    <div class="col-md-1">
        <label>
            Осталось мест
        </label>
    </div>
    <div class="col-md-1">
        <label>
            Стоимость
        </label>
    </div>
    <div class="col-md-1">
        <label>
            Количество
        </label>
    </div>
    <div class="col-md-1">
        
    </div>
</div>

@if (Model.TimeTableViewModels!=null && Model.TimeTableViewModels.Any())
{
     foreach (var timeTable in Model.TimeTableViewModels)
     {
         @Html.Partial("SearchSummary", timeTable)
     }
    <div class="pager">
        @Html.PageLinks(Model.PagingInfo, x => Url.Action("Search", new { Page = x}))
    </div>
}
else
{
    <h3 align="center">Повашему запросу рейсов в ближайшее время не планируется.</h3>
}
